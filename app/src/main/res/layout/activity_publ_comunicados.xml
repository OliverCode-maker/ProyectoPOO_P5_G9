<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PublComunicadosActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="1dp"
            android:orientation="vertical"
            android:padding="25dp">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nuevo Comunicado"
                android:textAlignment="center"
                android:fontFamily="@font/montserrat_black"
                android:textColor="@color/azul_primario"
                android:textSize="28sp"
                />

            <TextView
                android:layout_marginTop="10dp"
                android:fontFamily="@font/montserrat_bold"
                android:textColor="@color/rosa_primario"
                android:textSize="18sp"
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tipo:" />

            <RadioGroup
                android:id="@+id/rdTipo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/rdBtnAnuncio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Anuncio" />

                <RadioButton
                    android:id="@+id/rdBtnEvento"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Evento" />
            </RadioGroup>

            <TextView
                android:id="@+id/textView7"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/montserrat_bold"
                android:textColor="@color/rosa_primario"
                android:textSize="18sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Área" />

            <Spinner
                android:id="@+id/spinArea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/opcioes_area" />

            <TextView
                android:id="@+id/textView8"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/montserrat_bold"
                android:textColor="@color/rosa_primario"
                android:textSize="18sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Audiencia" />

            <CheckBox
                android:id="@+id/chEstudiantes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Estudiantes" />

            <CheckBox
                android:id="@+id/Profesores"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Profesores" />

            <CheckBox
                android:id="@+id/chAdministrativo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Administrativo" />

            <TextView
                android:id="@+id/textView9"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/montserrat_bold"
                android:textColor="@color/rosa_primario"
                android:textSize="18sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Título" />

            <EditText
                android:id="@+id/editTextTitulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="EjemploTitulo"
                android:background="@drawable/custom_input_2"
                android:fontFamily="@font/montserrat_medium"
                android:inputType="text"
                />

            <TextView
                android:id="@+id/textView10"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/montserrat_bold"
                android:textColor="@color/rosa_primario"
                android:textSize="18sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Descripción" />

            <EditText
                android:id="@+id/editTextDescripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Ejemplo Descripcion"
                android:background="@drawable/custom_input_2"
                android:fontFamily="@font/montserrat_medium"
                android:gravity="start|top"
                android:inputType="textMultiLine" />


            <TextView
                android:id="@+id/textLugar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/montserrat_bold"
                android:text="Lugar"
                android:textColor="@color/rosa_primario"
                android:textSize="18sp"
                android:visibility="gone" />

            <EditText
                android:id="@+id/editTextLugar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_input_2"
                android:ems="10"
                android:fontFamily="@font/montserrat_medium"
                android:hint="Ejemplo Lugar"
                android:inputType="text"
                android:visibility="gone" />

            <TextView
                android:id="@+id/textFecha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/montserrat_bold"
                android:text="Fecha:"
                android:textColor="@color/rosa_primario"
                android:textSize="18sp"
                android:visibility="gone" />

            <EditText
                android:id="@+id/editTextFecha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_input_2"
                android:ems="10"
                android:fontFamily="@font/montserrat_medium"
                android:hint="dd/mm/aaaa"
                android:inputType="date"
                android:visibility="gone" />

            <TextView
                android:id="@+id/textUrgencia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/montserrat_bold"
                android:text="Urgencia"
                android:textColor="@color/rosa_primario"
                android:textSize="18sp"
                android:visibility="gone" />

            <Spinner
                android:id="@+id/spinnerUrgencia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/nivel_urgencia"
                android:visibility="gone" />
            <TextView
                android:id="@+id/textView11"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/montserrat_bold"
                android:textColor="@color/rosa_primario"
                android:textSize="18sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Arte:" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/custom_input_2" />

            <Button
                android:id="@+id/btnCargarImagen"
                android:fontFamily="@font/montserrat_bold"
                android:backgroundTint="@color/rosa_primario"
                android:textSize="18dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="cargarImg"
                android:text="Cargar Imagen" />

            <Button
                android:id="@+id/btnPubl"
                android:fontFamily="@font/montserrat_bold"
                android:backgroundTint="@color/rosa_primario"
                android:textSize="18dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="publicarComunicado"
                android:text="Publicar" />

            <Button
                android:id="@+id/btnAtras"
                android:fontFamily="@font/montserrat_bold"
                android:backgroundTint="@color/rosa_primario"
                android:textSize="18dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="cancelar"
                android:text="Volver" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>