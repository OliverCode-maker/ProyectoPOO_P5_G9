<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Título de pantalla -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/titulo_nuevo_comunicado"
                android:textStyle="bold"
                android:textAlignment="center"/>

            <!-- Tipo -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/etiqueta_tipo"/>

            <RadioGroup
                android:id="@+id/rdTipo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/rbAnuncio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tipo_anuncio"/>
                <RadioButton
                    android:id="@+id/rbEvento"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tipo_evento"/>
            </RadioGroup>

            <!-- Área -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/etiqueta_area"/>

            <Spinner
                android:id="@+id/spArea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <!-- Audiencia -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/etiqueta_audiencia"/>

            <CheckBox
                android:id="@+id/chkEst"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/audiencia_estudiantes"/>
            <CheckBox
                android:id="@+id/chkPrf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/audiencia_profesores"/>
            <CheckBox
                android:id="@+id/chkAdm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/audiencia_administrativo"/>

            <!-- Título -->
            <EditText
                android:id="@+id/editTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_titulo"
                android:inputType="textCapSentences"/>

            <!-- Descripción -->
            <EditText
                android:id="@+id/editDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_descripcion"
                android:minLines="3"
                android:gravity="top|start"
                android:inputType="textMultiLine"/>

            <!-- FECHA (COMÚN) -->
            <EditText
                android:id="@+id/editFecha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_fecha"
                android:focusable="false"
                android:clickable="true"/>

            <!-- EVENTO: solo lugar -->
            <LinearLayout
                android:id="@+id/boxEvento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">
                <EditText
                    android:id="@+id/editLugar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_lugar"/>
            </LinearLayout>

            <!-- ANUNCIO: solo urgencia -->
            <LinearLayout
                android:id="@+id/boxAnuncio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/etiqueta_urgencia"/>
                <Spinner
                    android:id="@+id/spUrgencia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <!-- Imagen -->
            <EditText
                android:id="@+id/editImgName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/nombre_imagen"
                android:enabled="false"/> <!-- lo llenas al elegir imagen -->

            <ImageView
                android:id="@+id/imgPreview"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:adjustViewBounds="true"
                android:contentDescription="@string/imagen_previa"/>

            <Button
                android:id="@+id/btnCargarImagen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/btn_adjuntar_imagen" />

            <!-- Acciones -->
            <Button
                android:id="@+id/btnPubl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/btn_publicar" />

            <Button
                android:id="@+id/btnCancelar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/btn_volver" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
