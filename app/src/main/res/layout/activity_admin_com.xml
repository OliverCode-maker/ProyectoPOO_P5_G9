<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminComActivity">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        android:orientation="vertical"
        android:padding="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txtSaludo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/saludo"
            android:textSize="18sp"
            android:paddingBottom="16dp"/>

        <TextView
            android:id="@+id/txtOpciones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/opciones"
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingBottom="16dp"/>

        <Button
            android:id="@+id/btnVerComunicados"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="verCom"
            android:text="@string/ver_comunicados" />

        <Button
            android:id="@+id/btnPublicarCom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="publCom"
            android:text="@string/publicar_comunicados" />

        <Button
            android:id="@+id/btnMisComunicados"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="miCom"
            android:text="@string/mis_comunicados" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>