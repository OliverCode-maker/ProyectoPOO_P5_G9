<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PublComunicadosActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="1dp"
            android:orientation="vertical"
            android:padding="25dp">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_black"
                android:text="Nuevo Comunicado"
                android:textAlignment="viewStart"
                android:textColor="@color/azul_primario"
                android:textSize="28sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="Tipo"
                    android:textColor="@color/rosa_primario"
                    android:textSize="18sp" />

                <RadioGroup
                    android:id="@+id/rdTipo"
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rdBtnAnuncio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Anuncio" />

                    <RadioButton
                        android:id="@+id/rdBtnEvento"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Evento" />
                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="1dp"
                >

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="Área"
                    android:textColor="@color/rosa_primario"
                    android:textSize="18sp" />

                <Spinner
                    android:id="@+id/spinArea"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/opcioes_area" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="8dp">

                <!-- Texto a la izquierda -->
                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="Audiencia"
                    android:textColor="@color/rosa_primario"
                    android:textSize="18sp" />

                <!-- Opciones en vertical -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="20dp">

                    <CheckBox
                        android:id="@+id/chEstudiantes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Estudiantes" />

                    <CheckBox
                        android:id="@+id/Profesores"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Profesores" />

                    <CheckBox
                        android:id="@+id/chAdministrativo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Administrativo" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"

                    android:layout_height="match_parent"
                    android:textAlignment="center"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="Título"
                    android:textColor="@color/rosa_primario"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/editTextTitulo"
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/custom_input_2"
                    android:ems="10"
                    android:fontFamily="@font/montserrat_medium"
                    android:hint="EjemploTitulo"
                    android:inputType="text" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/layoutLugar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/textLugar"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="Lugar"
                    android:textColor="@color/rosa_primario"
                    android:textSize="18sp"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/editTextLugar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/custom_input_2"
                    android:ems="10"
                    android:fontFamily="@font/montserrat_medium"
                    android:hint="Ejemplo Lugar"
                    android:inputType="text"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutFecha"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/textFecha"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="Fecha"
                    android:textColor="@color/rosa_primario"
                    android:textSize="18sp"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/editTextFecha"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/custom_input_2"
                    android:ems="10"
                    android:fontFamily="@font/montserrat_medium"
                    android:hint="dd/mm/aaaa"
                    android:inputType="date"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutUrgencia"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/textUrgencia"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="Urgencia"
                    android:textColor="@color/rosa_primario"
                    android:textSize="18sp"

                    android:visibility="gone" />

                <Spinner
                    android:id="@+id/spinnerUrgencia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:entries="@array/nivel_urgencia"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="Descripción"
                    android:textColor="@color/rosa_primario"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/editTextDescripcion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/custom_input_2"
                    android:ems="10"
                    android:fontFamily="@font/montserrat_medium"
                    android:gravity="start|top"
                    android:hint="Ejemplo Descripcion"
                    android:inputType="textMultiLine" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="Arte:"
                    android:textColor="@color/rosa_primario"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/btnCargarImagen"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/rosa_primario"
                    android:fontFamily="@font/montserrat_bold"
                    android:onClick="cargarImg"
                    android:text="Cargar Imagen"
                    android:textSize="18dp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/custom_input_2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="16dp">

                <Button
                    android:id="@+id/btnPubl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/rosa_primario"
                    android:fontFamily="@font/montserrat_bold"
                    android:onClick="publicarComunicado"
                    android:text="Publicar"
                    android:textSize="18sp"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:id="@+id/btnAtras"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/rosa_primario"
                    android:fontFamily="@font/montserrat_bold"
                    android:onClick="cancelar"
                    android:text="Volver"
                    android:textSize="18sp"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>